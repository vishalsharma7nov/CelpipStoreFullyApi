            <Spinner
                android:id="@+id/reading_part4_question5_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="The following is a comment by a visitor to the website page. Complete the comment by choosing the best option to fill in each blank."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
